@using Microsoft.Web.Mvc
@using MvcAjaxGridSample.Models
@using MvcAjaxGridSample.Types
@model GridViewModel<MvcAjaxGridSample.Types.DataModel.Book>

@Html.Serialize("gridOptions", Model.Options)
<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-sm-2"></th>
            <th>Title</th>
            <th>Year</th>
        </tr>
    </thead>
    <tr class="info">
        <td>
            @Html.Command("Apply", m => m.Options.Command, GridCommand.Filter)
            @Html.Command("Clear", m => m.Options.Command, GridCommand.FilterClear)
        </td>
        <td>@Html.SimpleEdit(m => m.Options.Filter.Title, Model.Options.Filter.Title)</td>
        <td>@Html.SimpleEdit(m => m.Options.Filter.IssueYear, Model.Options.Filter.IssueYear)</td>
    </tr>
    <tbody>
        @foreach (var book in Model.Data)
        {
            <tr>
                <td>
                    @Ajax.ActionLink("Edit", "Edit", "Home", new {id = book.Id}, new AjaxOptions{HttpMethod = "POST", UpdateTargetId = "editBookDialogContent", OnSuccess = "ShowEditDialog"}, new{@class="btn-default btn-xs btn"})
                    @Html.Command("Delete", m => m.DeletedId, book.Id, confirm: "Are you sure?")
                </td>
                <td>@book.Title</td>
                <td>@book.IssueYear</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <div class="pull-left">
        <button type="submit" class="btn btn-xs btn-primary"  name="@Html.NameFor(m => m.Options.Command)" value="@GridCommand.New">New</button>
    </div>
    <div class="pull-right">
        <div>
            @Html.Command("<", m => m.Options.Command, GridCommand.PageLeft)
            @Html.SimpleEdit(m => m.Options.Paging.PageIndex, Model.Options.Paging.PageIndex, new Dictionary<string, object>{{"style","width:30px"}})
            /
            <span>@Model.Options.Paging.TotalPages</span>
            @Html.Command(">", m => m.Options.Command, GridCommand.PageRight)
            @Html.Command("Go", m => m.Options.Command, GridCommand.GoTo)
        </div>
    </div>
</div>